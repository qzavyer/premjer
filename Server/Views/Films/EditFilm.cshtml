@model Server.DataBase.Film

    <form>
        <div class="row" style="position: inherit">
            <div class="col-sm-10">
                <label>Наименование</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="col-sm-2">
                <label>Зал</label>
                <select asp-for="HallId" asp-items="ViewBag.Halls" class="form-control"></select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <label>Время</label>
                <input class="form-control" asp-for="Time" />
            </div>
            <div class="col-sm-6">
                <label>Цена билета</label>
                <input class="form-control" asp-for="Price" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <button class="btn" type="button" onclick="saveFilm()">Сохранить</button>
            </div>
        </div>
    </form>
